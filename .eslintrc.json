{
  "root": true,
  "extends": [
    "airbnb-typescript",
    "eslint-config-prettier",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "plugins": [
    "import",
    "@typescript-eslint"
  ],
  "rules": {
    "react/jsx-filename-extension": "off"
  }
}
